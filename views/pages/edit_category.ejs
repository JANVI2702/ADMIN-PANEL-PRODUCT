<%- include('../partials/header')%>

  <div class="container">
    <div class="page-inner">
      <div class="page-header">
        <h3 class="fw-bold mb-3">Forms</h3>
        <ul class="breadcrumbs mb-3">
          <li class="nav-home">
            <a href="/">
              <i class="icon-home"></i>
            </a>
          </li>
          <li class="separator">
            <i class="icon-arrow-right"></i>
          </li>
          <li class="nav-item">
            <a href="/category/view_category">Categories</a>
          </li>
          <li class="separator">
            <i class="icon-arrow-right"></i>
          </li>
          <li class="nav-item">
            <a href="javascript:void(0)">Update Category</a>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <form class="form-horizontal" action="/category/edit_category/<%= category.id %>" method="post"
              enctype="multipart/form-data">
              <!-- <div class="card-header">
              <div class="card-title">Update Category</div>
            </div> -->
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="categoryname">Name</label>
                      <input type="text" class="form-control" value="<%= category.categoryname %>" name="categoryname"
                        placeholder="Enter Product Name" required />
                    </div>
                    <div class="form-group">
                      <img class="rounded" src="../../<%= category.image %>" alt="<%= category.categoryname %>"
                        width="100" />
                      <input type="hidden" name="oldImage" value="<%= category.image %>" />
                    </div>
                    <div class="form-group">
                      <label for="image">Image</label>
                      <input type="file" class="form-control" name="image" />
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-action">
                <button class="btn btn-primary" type="submit">Update</button>
              </div>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>

  <%- include("../partials/footer")%>